<h2><%= t('.title') %></h2>
<hr class="my-4">


<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <dl>
      <dt><%= f.label :password, t('.new_password')%></dt>
      <% if @minimum_password_length %>
        <em>(m√≠nimo de <%= @minimum_password_length %> caracteres)</em>
      <% end %>
      <dd><%= f.password_field :password, autofocus: true, autocomplete: "new-password" %></dd>
  </div>

  <div class="field">
    <dl>
      <dt><%= f.label :password_confirmation, t('.new_password_confirmation') %></dt>
      <dt><%= f.password_field :password_confirmation, autocomplete: "new-password" %></dt>
    </dl>
  </div>

  <div class="actions">
    <%= f.submit t('.change_my_password'), class: "btn btn-dark" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
