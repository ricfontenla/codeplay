<%= form_with model: course do |form| %>
  <%= form.label :name, 'Nome' %>
  <%= form.text_field :name %>
  <%= form.label :description, 'Descrição' %>
  <%= form.text_area :description %>
  <%= form.label :code, 'Código' %>
  <%= form.text_field :code %>
  <%= form.label :price, 'Preço' %>
  <%= form.text_field :price %>
  <%= form.label :enrollment_deadline, 'Data limite de matrícula' %>
  <%= form.date_field :enrollment_deadline %>
  <%= form.label :instructor_id, 'Professor' %>
  <%= form.collection_select :instructor_id, @instructors, :id, :name %>
  <%= form.submit 'Criar curso' %>
<% end %>

<% if @course.errors.any? %>
  <ul>
    <% course.errors.each do |error| %>
      <li><%= error.message %></li>
    <% end %>
  </ul>
<% end %>